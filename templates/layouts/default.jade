
extends base.jade

include ../mixins/footer.jade

block body

    body
        block modal

        nav.pushy.pushy-left
            .pushy-content
                ul
                    li.pushy-link
                        a(href='/submit')
                            span.fa.fa-cloud-upload
                                span.blue-text  Submit
                    li.pushy-link
                        a(href='/about')
                            span.fa.fa-info-circle
                            span.blue-text  About
                    if locals.user
                        li.pushy-link
                            a(href='/shared')
                                span.fa.fa-bolt
                                span.blue-text  Shared with Me
                        li.pushy-link
                            a(href='/manage')
                                span.fa.fa-align-left
                                span.blue-text  Submissions
                        if config.experimental.dataIntegration
                            li.pushy-link
                                a(href='/jobs')
                                    span.fa.fa-tasks
                                    span.blue-text  Jobs
                        if locals.user.isAdmin
                            li.pushy-link
                                a(href='/admin')
                                    span.fa.fa-cogs
                                    span.blue-text  Admin
                        li.pushy-link
                            a(href='/logout')
                                span.fa.fa-sign-out
                    else
                        li.pushy-link
                            a(href='/login')
                                span.fa.fa-sign-in
                                span.blue-text  Login or Register

        div#container
            nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
                button.navbar-toggler.navbar-toggler-right.menu-btn(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                h1.sbh-title
                    block topTitle
                a.navbar-brand(href='#')
                    if config.instanceLogo
                        img.sbh-logo(src=config.instanceLogo)
                    else
                        img.sbh-logo(src='/images/logo.svg')

            block intro

            block content

            div.clearfix

            div(align='center').footer-bar.home-page-footer.blue-text.grey-page-mark
                +footer()



